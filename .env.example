# Firebase Configuration (Required)
# Get these values from your Firebase project settings
VITE_FIREBASE_API_KEY=your-api-key-here
VITE_FIREBASE_AUTH_DOMAIN=your-auth-domain.firebaseapp.com
VITE_FIREBASE_PROJECT_ID=your-project-id
VITE_FIREBASE_STORAGE_BUCKET=your-storage-bucket.appspot.com
VITE_FIREBASE_MESSAGING_SENDER_ID=your-sender-id
VITE_FIREBASE_APP_ID=your-app-id
VITE_FIREBASE_MEASUREMENT_ID=your-measurement-id

# Firebase Service Account (for Admin SDK - Functions)
# Download from Firebase Console > Project Settings > Service Accounts
# FIREBASE_SERVICE_ACCOUNT_KEY=path/to/serviceAccountKey.json

# Optional: Use Firebase Emulator for local development
USE_FIREBASE_EMULATOR=false

# Optional: Firebase Emulator Settings (if USE_FIREBASE_EMULATOR=true)
FIREBASE_AUTH_EMULATOR_HOST=localhost:9099
FIRESTORE_EMULATOR_HOST=localhost:8080
FIREBASE_STORAGE_EMULATOR_HOST=localhost:9199

# App Configuration
VITE_APP_NAME=LabFlow
VITE_APP_VERSION=1.0.0
VITE_APP_ENVIRONMENT=development

# Logger Configuration
VITE_LOG_LEVEL=warn
VITE_DEBUG_MODE=false

# LOINC API Configuration (Optional - for test catalog)
VITE_LOINC_API_USERNAME=your-loinc-username
VITE_LOINC_API_PASSWORD=your-loinc-password

# Stripe Configuration (Optional - for payment processing)
VITE_STRIPE_PUBLISHABLE_KEY=pk_test_your-key-here
STRIPE_SECRET_KEY=sk_test_your-key-here

# Twilio Configuration (Optional - for SMS notifications)
TWILIO_ACCOUNT_SID=your-account-sid
TWILIO_AUTH_TOKEN=your-auth-token
TWILIO_PHONE_NUMBER=+1234567890

# SendGrid Configuration (Optional - for email notifications)
SENDGRID_API_KEY=your-sendgrid-api-key
SENDGRID_FROM_EMAIL=noreply@yourdomain.com

# Google Maps API (Optional - for location services)
VITE_GOOGLE_MAPS_API_KEY=your-google-maps-api-key

# Sentry Configuration (Optional - for error tracking)
VITE_SENTRY_DSN=your-sentry-dsn
VITE_SENTRY_ENVIRONMENT=development

# Analytics (Optional)
VITE_GA_MEASUREMENT_ID=G-XXXXXXXXXX