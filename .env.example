# LabFlow Environment Variables Template
# Copy this file to .env.local and fill in your values

# Firebase Configuration
VITE_FIREBASE_API_KEY=your-api-key
VITE_FIREBASE_AUTH_DOMAIN=your-auth-domain
VITE_FIREBASE_PROJECT_ID=your-project-id
VITE_FIREBASE_STORAGE_BUCKET=your-storage-bucket
VITE_FIREBASE_MESSAGING_SENDER_ID=your-messaging-sender-id
VITE_FIREBASE_APP_ID=your-app-id
VITE_FIREBASE_MEASUREMENT_ID=your-measurement-id

# Firebase Functions Configuration
VITE_FIREBASE_FUNCTIONS_REGION=us-central1

# App Configuration
VITE_APP_NAME=LabFlow
VITE_APP_URL=http://localhost:5173
VITE_PROJECT_PREFIX=labflow_

# API Configuration
VITE_API_BASE_URL=http://localhost:5001/your-project-id/us-central1/api
VITE_API_TIMEOUT=30000

# Feature Flags
VITE_ENABLE_ANALYTICS=true
VITE_ENABLE_PERFORMANCE=true
VITE_ENABLE_MESSAGING=true
VITE_ENABLE_REMOTE_CONFIG=true
VITE_ENABLE_APP_CHECK=false

# Development Settings
VITE_USE_FIREBASE_EMULATOR=false
VITE_FIREBASE_EMULATOR_AUTH_URL=http://localhost:9099
VITE_FIREBASE_EMULATOR_FIRESTORE_HOST=localhost
VITE_FIREBASE_EMULATOR_FIRESTORE_PORT=8080
VITE_FIREBASE_EMULATOR_FUNCTIONS_URL=http://localhost:5001
VITE_FIREBASE_EMULATOR_STORAGE_HOST=localhost
VITE_FIREBASE_EMULATOR_STORAGE_PORT=9199

# Security Settings
VITE_ENABLE_BIOMETRIC_AUTH=true
VITE_SESSION_TIMEOUT_MINUTES=15
VITE_MAX_LOGIN_ATTEMPTS=5
VITE_PASSWORD_MIN_LENGTH=12

# External Services
VITE_SENDGRID_API_KEY=your-sendgrid-key
VITE_TWILIO_ACCOUNT_SID=your-twilio-sid
VITE_TWILIO_AUTH_TOKEN=your-twilio-token
VITE_STRIPE_PUBLISHABLE_KEY=your-stripe-key

# Monitoring and Analytics
VITE_SENTRY_DSN=your-sentry-dsn
VITE_GOOGLE_ANALYTICS_ID=your-ga-id
VITE_MIXPANEL_TOKEN=your-mixpanel-token

# Chrome Extension
VITE_CHROME_EXTENSION_ID=your-extension-id

# Test Configuration (for E2E tests)
CYPRESS_TEST_EMAIL=test@labflow.com
CYPRESS_TEST_PASSWORD=testpassword123
CYPRESS_ADMIN_EMAIL=admin@labflow.com
CYPRESS_ADMIN_PASSWORD=adminpassword123

# Production Only (set in CI/CD)
# VITE_APP_VERSION=auto-generated
# VITE_BUILD_NUMBER=auto-generated
# VITE_COMMIT_SHA=auto-generated